---
import SearchLayout from "../layouts/SearchLayout.astro";
import { CreateNewDocChunkForm } from "../components/CreateNewDocChunkForm";
import Footer from "../components/Footer.astro";
const create_evidence_feature =
  import.meta.env.PUBLIC_CREATE_EVIDENCE_FEATURE !== "off";
if (!create_evidence_feature) {
  return Astro.redirect("/404");
}
---

<head>
  <script src="/tinymce/tinymce.min.js" :inline></script>
</head>
<SearchLayout title="Create Card | Arguflow Search">
  <div class="mt-4 flex w-full flex-col items-center space-y-4 px-4 sm:mt-12">
    <a class="flex w-full items-center justify-center" href="/">
      <img class="w-12" src="/logo_transparent.png" alt="Logo" />
      <h1 class="text-4xl text-center">Create New Evidence Card</h1>
    </a>
    <div class="w-full max-w-4xl px-4 sm:px-8 md:px-20">
      <CreateNewDocumentChunkForm client:only />
    </div>
  </div>
  <div class="flex-1"></div>
  <Footer />
</SearchLayout>
