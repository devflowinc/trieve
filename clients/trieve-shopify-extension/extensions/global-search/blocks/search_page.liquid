{% schema %}
{
  "name": "Trieve Search Page",
  "target": "section",
  "settings": [
    {
      "type": "select",
      "id": "theme",
      "label": "Theme",
      "options": [
        { "label": "Light", "value": "light" },
        { "label": "Dark", "value": "dark" }
      ],
      "default": "light"
    },
    {
      "type": "color",
      "id": "brand_color",
      "label": "Brand Color",
      "default": "#ff0000"
    },
    {
      "type": "text",
      "id": "chat_placeholder",
      "label": "Input Placeholder Text",
      "default": "Ask anything..."
    },
    {
      "type": "checkbox",
      "id": "open_links_new_tab",
      "label": "Open Links in New Tab",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_sugestions_refresh",
      "label": "Show Refresh Suggested Queries Button",
      "default": true
    },
    {
      "id": "default_ai_questions",
      "type": "textarea",
      "label": "Initial Questions (Separated by commas)",
      "placeholder": "What is this made of?"
    },
    {
      "id": "custom_css",
      "type": "textarea",
      "label": "Custom CSS",
      "placeholder": ".trieve-inline-root { background-color: red; }"
    }
  ]
}
{% endschema %}
